{
  "name": "observer",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "chrono-node": "^2.7.6",
    "dayjs": "^1.11.11",
    "easymde": "^2.18.0",
    "htm": "^3.1.1",
    "isomorphic-dompurify": "^2.13.0",
    "jquery": "^3.6.1",
    "jquery-migrate": "^3.4.0",
    "marked": "^13.0.2",
    "sass": "^1.69.5",
    "video.js": "^8.10.0"
  },
  "devDependencies": {
    "pre-commit": "^1.2.2",
    "prettier": "^3.3.2",
    "webpack": "^5.92.0",
    "webpack-cli": "^5.1.4"
  },
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "postinstall": "npm run build",
    "format": "prettier --write \"{js,ui,html}/**/*.{js,html}\"",
    "format:check": "prettier --check \"{js,ui,html}/**/*.{js,html}\" || (echo 'Format check failed.' && exit 1)",
    "phpcs": "vendor/bin/phpcs --standard=.phpcs.xml.dist || (echo 'PHP CodeSniffer failed.' && exit 1)",
    "pre-commit": "npm run format:check && npm run phpcs"
  },
  "pre-commit": [
    "pre-commit"
  ]
